<xml>
    <object name="InertialSensorSettings" singleinstance="true" settings="true">
        <description>Settings for the @ref Attitude module</description>
        <field name="AccelBias" units="m/s^2" type="float" elementnames="X,Y,Z" defaultvalue="0"/>
        <field name="AccelScale" units="[-]" type="float" elementnames="X,Y,Z" defaultvalue="1"/>
        <field name="InitialGyroBias" units="deg/s" type="float" elementnames="X,Y,Z" defaultvalue="0"/>
        <field name="NominalGyroGain" units="(rad/s)/unit" type="float" elements="1" defaultvalue="0.42"/>
        <field name="GyroScale" units="-" type="float" elementnames="X,Y,Z" defaultvalue="1"/>
        <field name="BiasCorrectGyro" units="channel" type="enum" elements="1" options="FALSE,TRUE" defaultvalue="TRUE"/>
        <field name="GyroTempCoeff" units="(deg/s)/deg" type="float" elementnames="X,Y,Z" defaultvalue="1"/>
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="true" updatemode="onchange" period="0"/>
        <telemetryflight acked="true" updatemode="onchange" period="0"/>
        <logging updatemode="manual" period="0"/>
    </object>
</xml>
